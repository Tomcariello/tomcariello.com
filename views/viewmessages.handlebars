<section class="main">
  <div class='row'>
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Message Activity</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-2">
              <h3>Date</h3>
            </div>
            <div class="col-xs-2">
              <h3>Name</h3>
            </div>
            <div class="col-xs-2">
              <h3>E-Mail</h3>
            </div>
            <div class="col-xs-5">
              <h3>Message</h3>
            </div>
          </div>
        </div>
        {{#each dynamicData}}
          <hr>
          <div class="row">
            <div class="col-xs-1 deleteColumn center">
              <a href="deletemessage/{{this.id}}">
                <i class="fa fa-times-circle fa-2x" aria-hidden="true" title="Delete Message"></i>
              </a>
            </div>
            <div class="col-xs-2">
              {{formatdate this.createdAt}}
            </div>            
            <div class="col-xs-2">
              {{this.name}}
            </div>
            <div class="col-xs-2">
              {{this.email}}
            </div>
            <div class="col-xs-5">
              {{this.message}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>