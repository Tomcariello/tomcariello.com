<section class="main mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center py-3">
          <h3 class="mb-0">Message Activity</h3>
          <span class="badge bg-primary rounded-pill">{{dynamicData.length}} Messages</span>
        </div>
        
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col" class="text-center" style="width: 80px;">Action</th>
                  <th scope="col">Date</th>
                  <th scope="col">Name</th>
                  <th scope="col">E-Mail</th>
                  <th scope="col">Message</th>
                </tr>
              </thead>
              <tbody>
                {{#each dynamicData}}
                <tr>
                  <td class="text-center">
                    <a href="deletemessage/{{this.id}}" class="text-danger" onclick="return confirm('Delete this message?')">
                      <i class="fas fa-times-circle fa-lg" title="Delete Message"></i>
                    </a>
                  </td>
                  <td class="text-nowrap">
                    {{formatdate this.createdAt}}
                  </td>            
                  <td class="fw-bold">
                    {{this.name}}
                  </td>
                  <td>
                    <a href="mailto:{{this.email}}" class="text-decoration-none">
                      <i class="far fa-envelope me-1"></i>{{this.email}}
                    </a>
                  </td>
                  <td class="text-muted">
                    <div style="max-height: 60px; overflow-y: auto;">
                      {{this.message}}
                    </div>
                  </td>
                </tr>
                {{else}}
                <tr>
                  <td colspan="5" class="text-center py-5 text-muted">
                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                    Your inbox is empty.
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>