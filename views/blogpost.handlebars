<section class="page-blog-post">
  <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
    
    <header class="post-header text-center mb-5">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-center">
          <li class="breadcrumb-item"><a href="/blog">Blog</a></li>
          <li class="breadcrumb-item active" aria-current="page">Post</li>
        </ol>
      </nav>
      
      <h1 class="display-4 post-headline mb-3">
        {{{decodeSummernote dynamicData.headline}}}
      </h1>

      <div class="post-meta text-muted">
        <span class="author"><i class="fas fa-user-circle"></i> {{dynamicData.author}}</span>
        <span class="mx-3">â€¢</span>
        <span class="date"><i class="far fa-calendar-alt"></i> {{formatdate dynamicData.createdAt}}</span>
      </div>
    </header>

    {{#if dynamicData.blogimage}}
    <figure class="post-hero-image mb-5">
      <img src="{{dynamicData.blogimage}}" class="img-fluid rounded-4 shadow-sm" alt="{{dynamicData.headline}}">
    </figure>
    {{/if}}

    <article class="post-body">
      <div class="content-wrapper">
        {{{decodeSummernote dynamicData.blogtext}}}
      </div>

      <div class="mt-5">
        <a href="/blog" class="back-to-feed-link">
          <i class="fas fa-arrow-left me-2"></i>Back to Blog Feed
        </a>
      </div>
    </article>

  </div>
</section>