<section class="page-about">
  <div class="col-sm-12 col-md-8 mx-auto">
    
    <div class="panel panel-default mb-5">
      <div class="panel-heading">
        <h3>About Me</h3>
      </div>
      <div class="panel-body">
        <div class="about-grid">
          <div class="about-media">
            <img class="profile-img" src="{{dynamicData.image}}" alt="Tom's profile image">
            <div class="profile-caption">
              {{{decodeSummernote dynamicData.caption}}}
            </div>
          </div>
          <div class="about-content">
            {{{decodeSummernote dynamicData.bio}}}
          </div>
        </div>
      </div>
    </div>

    <hr class="section-divider">

    <div class="panel panel-default mt-5">
      <div class="panel-heading">
        <h3>About This Page</h3>
      </div>
      <div class="panel-body">
        <div class="about-grid">
          <div class="about-media">
            <img class="profile-img" src="{{dynamicData.aboutpageimage}}" alt="About the site image">
            <div class="profile-caption">
              {{{decodeSummernote dynamicData.aboutpagecaption}}}
            </div>
          </div>
          <div class="about-content">
            {{{decodeSummernote dynamicData.aboutpagetext}}}
          </div>
        </div>
      </div>
    </div>

  </div>
</section>