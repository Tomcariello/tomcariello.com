<section class="page-login d-flex align-items-center justify-content-center" style="min-height: 70vh;">
  <div class="col-sm-10 col-md-6 col-lg-4">
    
    <div class="login-card shadow-lg p-4 p-md-5 rounded-4 border bg-white">
      <div class="text-center mb-4">
        <i class="fas fa-user-shield fa-3x text-primary mb-3"></i>
        <h2 class="fw-bold">Admin Portal</h2>
        <p class="text-muted small">Please enter your credentials to continue.</p>
      </div>

      <form action="login" method="POST">
        <div class="form-floating mb-3">
          <input type="text" 
                name="username" 
                id="username" 
                autocomplete="username" 
                autocorrect="off" 
                autocapitalize="none"
                placeholder="foo@bar.com">
        </div>

        <div class="form-floating mb-4">
          <input type="password" 
                name="password" 
                id="password" 
                autocomplete="current-password"
                placeholder="********">
        </div>

        <div class="d-grid">
          <button class="btn btn-primary btn-lg rounded-pill fw-bold py-3" type="submit">
            Sign In <i class="fas fa-sign-in-alt ms-2"></i>
          </button>
        </div>
      </form>
      
      <div class="text-center mt-4">
        <a href="/index" class="text-decoration-none small text-secondary">
          <i class="fas fa-arrow-left me-1"></i> Back to Public Site
        </a>
      </div>
    </div>

  </div>
</section>