<section class="main mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-start py-3">
          <div class="d-flex flex-column">
            <div class="mb-1">
              {{{dynamicData.blogTitle}}}
            </div>
            <small class="text-muted fw-bold text-uppercase tracking-wide">Comments</small>
          </div>

          <a href="/blogmanagement" class="btn btn-sm btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to Blogs
          </a>
        </div>
        
        <div class="card-body p-0"> <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col" class="text-center" style="width: 80px;">Action</th>
                  <th scope="col">Date</th>
                  <th scope="col">Name</th>
                  <th scope="col">Headline</th>
                  <th scope="col">Comment</th>
                </tr>
              </thead>
              <tbody>
                {{#each dynamicData.comments}}
                <tr>
                  <td class="text-center">
                    <a href="deletecomment/{{this.id}}?blogid={{this.blogid}}" 
                       class="text-danger" 
                       onclick="return confirm('Are you sure you want to delete this comment?')">
                      <i class="fas fa-times-circle fa-lg" title="Delete Comment"></i>
                    </a>
                  </td>
                  <td class="text-nowrap">
                    {{formatdate this.createdAt}}
                  </td>            
                  <td class="fw-bold">
                    {{this.commentauthor}}
                  </td>
                  <td>
                    {{this.commentheadline}}
                  </td>
                  <td class="text-muted">
                    <small>{{this.commenttext}}</small>
                  </td>
                </tr>
                {{else}}
                <tr>
                  <td colspan="5" class="text-center py-4 text-muted">
                    No comments found for this blog post.
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>