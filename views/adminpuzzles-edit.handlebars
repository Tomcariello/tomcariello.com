<section class="admin-edit-page py-4">
    <div class="container">
        <div class="d-flex align-items-center mb-4">
            <a href="/adminpuzzles" class="btn btn-outline-secondary btn-sm me-3">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="h3 mb-0">Edit Puzzle<span class="text-muted">#{{dynamicData.puzzle_id}}</span></h1>
        </div>

        <form action="/updatepuzzle/{{dynamicData.id}}" method="POST" enctype="multipart/form-data">
            <div class="row g-4">

                <div class="col-lg-8">
                    <div class="card shadow-sm border-0 rounded-4 p-4">
                        <h5 class="fw-bold mb-4">General Information</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Puzzle Name</label>
                            <input type="text" name="puzzle_name" class="form-control"
                                value="{{dynamicData.puzzle_name}}" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Year</label>
                                <input type="number" name="year" class="form-control" value="{{dynamicData.year}}">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Piece Count</label>
                                <input type="number" name="piece_count" class="form-control"
                                    value="{{dynamicData.piece_count}}">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Notes</label>
                            <textarea name="notes" class="form-control" rows="4">{{dynamicData.notes}}</textarea>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" name="in_collection" id="inCollection" {{#if
                                dynamicData.in_collection}}checked{{/if}}>
                            <label class="form-check-label fw-bold" for="inCollection">In My Collection</label>
                        </div>
                        <div id="collectionDetails"
                            style="display: {{#if dynamicData.in_collection}}block{{else}}none{{/if}};">
                            <div class="card border-primary border-opacity-25 bg-primary bg-opacity-10 p-3 mb-4">
                                <h6 class="fw-bold text-primary mb-3">Collection Details</h6>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Is it Complete?</label>
                                        <select name="is_complete" class="form-select">
                                            <option value="" {{#if (eq dynamicData.is_complete null)}}selected{{/if}}>
                                                Unknown
                                            </option>
                                            <option value="1" {{#if (eq dynamicData.is_complete true)}}selected{{/if}}>
                                                Yes (All pieces present)
                                            </option>
                                            <option value="0" {{#if (eq dynamicData.is_complete false)}}selected{{/if}}>
                                                No (Missing pieces)
                                            </option>
                                        </select>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">How Acquired?</label>
                                        <input type="text" name="how_acquired" class="form-control"
                                            value="{{dynamicData.how_acquired}}"
                                            placeholder="e.g. Thrift Store, Gift, Amazon">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
                        <h5 class="fw-bold mb-4">Image Management</h5>
                        <div class="mb-4">
                            <label class="small text-muted text-uppercase fw-bold">Box Front</label>
                            <div class="mt-2 mb-2 position-relative">
                                {{#if dynamicData.image_box_front}}
                                <div class="position-relative d-inline-block">
                                    <img src="{{dynamicData.s3Base}}{{dynamicData.image_box_front}}"
                                        class="img-thumbnail d-block mb-2" style="max-height: 120px;">
                                    <button type="button"
                                        onclick="deleteImage('{{dynamicData.id}}', 'image_box_front', '{{dynamicData.image_box_front}}')"
                                        class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 shadow-sm"
                                        title="Delete Image">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                                {{else}}
                                <div class="py-3 bg-light text-center rounded border dashed">
                                    <small class="text-muted">No front image</small>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                        <input type="file" name="image_box_front" class="form-control form-control-sm">
                    </div>
                    <div class="mb-4">
                        <label class="small text-muted text-uppercase fw-bold">Box Back</label>
                        <div class="mt-2 mb-2 position-relative">
                            {{#if dynamicData.image_box_back}}
                            <div class="position-relative d-inline-block">
                                <img src="{{dynamicData.s3Base}}{{dynamicData.image_box_back}}"
                                    class="img-thumbnail d-block mb-2" style="max-height: 120px;">
                                <button type="button"
                                    onclick="deleteImage('{{dynamicData.id}}', 'image_box_back', '{{dynamicData.image_box_back}}')"
                                    class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 shadow-sm"
                                    title="Delete Image">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            {{else}}
                            <div class="py-3 bg-light text-center rounded border dashed">
                                <small class="text-muted">No back image</small>
                            </div>
                            {{/if}}
                        </div>
                        <input type="file" name="image_box_back" class="form-control form-control-sm">
                    </div>
                    <div class="mb-4">
                        <label class="small text-muted text-uppercase fw-bold">Completed Puzzle</label>
                        <div class="mt-2 mb-2 position-relative">
                            {{#if dynamicData.image_complete}}
                            <div class="position-relative d-inline-block">
                                <img src="{{dynamicData.s3Base}}{{dynamicData.image_complete}}"
                                    class="img-thumbnail d-block mb-2" style="max-height: 120px;">
                                <button type="button"
                                    onclick="deleteImage('{{dynamicData.id}}', 'image_complete', '{{dynamicData.image_complete}}')"
                                    class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 shadow-sm"
                                    title="Delete Image">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            {{else}}
                            <div class="py-3 bg-light text-center rounded border dashed">
                                <small class="text-muted">No completion image</small>
                            </div>
                            {{/if}}
                        </div>
                        <input type="file" name="image_complete" class="form-control form-control-sm">
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold">
                        Save Changes
                    </button>
                </div>
            </div>
    </div>
    </form>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const collectionToggle = document.getElementById('inCollection');
            const collectionDetails = document.getElementById('collectionDetails');

            collectionToggle.addEventListener('change', function () {
                if (this.checked) {
                    collectionDetails.style.display = 'block';
                    // Optional: add a little animation class here
                } else {
                    collectionDetails.style.display = 'none';
                }
            });
        });

        async function deleteImage(dbId, fieldName, fileName) {
            if (!confirm('Are you sure you want to delete this image from the cloud and database?')) return;

            try {
                const response = await fetch(`/delete-puzzle-image/${dbId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ fieldName, fileName })
                });

                if (response.ok) {
                    window.location.reload(); // Refresh to show the empty state
                } else {
                    alert('Failed to delete image.');
                }
            } catch (err) {
                console.error('Error:', err);
                alert('An error occurred while deleting.');
            }
        }
    </script>
</section>