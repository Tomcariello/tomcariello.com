<section class="page-portfolio">
  <div id="quickAccess" class="project-nav-grid mb-5">
    {{#each dynamicData}}
    <div class="qap-item" id="{{this.id}}" role="button" tabindex="0">
      <div class="qap-img-wrapper">
        <img src="{{this.ProjectIMG}}" alt="{{this.ProjectName}}">
      </div>
      <div class="qap-label">{{this.ProjectName}}</div>
    </div>
    {{/each}}
  </div>

  <div class="portfolio-display-area">
    <div class="portfolio-card placeholder-card" id="main-999">
      <div class="text-center p-5">
        <i class="fas fa-mouse-pointer fa-3x mb-3 text-muted"></i>
        <h4>Select a project to view details</h4>
      </div>
    </div>

    {{#each dynamicData}}
    <div class="portfolio-card project-detail-card d-none" id="main-{{this.id}}">
      <div class="row g-0">
        <div class="col-md-5">
          <a href="{{this.ProjectURL}}" target="_blank" class="d-block">
            <img src="{{this.ProjectIMG}}" class="detail-img" alt="{{this.ProjectName}}">
          </a>
        </div>
        <div class="col-md-7">
          <div class="card-body p-4">
            <h2 class="project-title">{{this.ProjectName}}</h2>
            <div class="project-description my-3">
              {{{decodeSummernote this.ProjectBlurb}}}
            </div>
            <div class="project-actions">
              <a href="{{this.ProjectURL}}" target="_blank" class="btn btn-primary me-2">Launch Project</a>
              <a href="{{this.GithubURL}}" target="_blank" class="btn btn-outline-dark">
                <i class="fab fa-github"></i> GitHub
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>