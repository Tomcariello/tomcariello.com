<section class="page-blog-admin">
    <div class="admin-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Blog Management</h2>
            <p class="text-secondary mb-0">Manage your stories, drafts, and reader discussions.</p>
        </div>
        <a href="createblog" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Create New Post
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-muted small text-uppercase" style="width: 40%;">Blog Title</th>
                        <th class="py-3 text-muted small text-uppercase" style="width: 25%;">Date Created</th>
                        <th class="py-3 text-muted small text-uppercase text-end pe-4" style="width: 35%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dynamicData}}
                    <tr>
                        <td class="ps-4">
                            <div class="fw-bold text-dark">
                                {{{decodeSummernote this.headline}}}
                            </div>
                        </td>
                        <td>
                            <span class="text-secondary">{{formatdate this.createdAt}}</span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                <a href="blogcomments?id={{this.id}}" class="btn btn-white btn-sm border"
                                    title="Comments">
                                    <i class="fas fa-comment text-info"></i>
                                </a>
                                <a href="editblog?id={{this.id}}" class="btn btn-white btn-sm border" title="Edit Post">
                                    <i class="fas fa-edit text-warning"></i>
                                </a>
                                <button type="button" class="btn btn-white btn-sm border"
                                    onclick="confirmDelete('{{this.id}}')" title="Delete Post">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <script>
        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this blog post? This cannot be undone.")) {
                window.location.href = `/deleteblog/${id}`;
            }
        }
    </script>
</section>