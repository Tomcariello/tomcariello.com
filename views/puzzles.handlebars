    .puzzle-thumbnail {
        height: 400px;
        overflow: hidden;
        transition: transform 0.2s;
        border: 1px solid #ddd;
    }
    .puzzle-thumbnail:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .owned-border {